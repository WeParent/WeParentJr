<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeParentJr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowNoTitle" >true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/lightorange</item>
        <item name="colorControlHighlight">@color/lightorange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightorange</item>
        <item name="android:colorControlHighlight">@color/lightorange</item>

        <!-- Customize your theme here. -->

    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogPositiveButtonStyle</item>
    </style>
    <style name="DialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColorPrimary">@color/lightorange</item>
    </style>
    <style name="SwitchPreferenceCompatStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackColorActive"> @color/lightorange</item>
        <item name="tickColorActive">@color/lightorange</item>
        <item name="thumbColor">@color/lightorange</item>
    </style>
</resources>